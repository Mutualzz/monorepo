{
    "name": "mutualzz",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "typecheck": "turbo run typecheck",
        "prestart": "pnpm install && pnpm build:packages && pnpm build:server",
        "build:server": "turbo run build --filter=\"./apps/server\"",
        "build:packages": "turbo run build --filter=\"./packages/logger\" --filter=\"./packages/validators\" --filter=\"./packages/types\"",
        "start": "pm2 start ./pm2.config.cjs",
        "gen-changelog": "node scripts/generateChangelog.mjs",
        "prepare": "husky",
        "dev:frontend": "turbo run dev --filter=\"./apps/app\" --filter=\"./packages/ui\"",
        "release": "git checkout release && git merge master && git push origin release && git checkout master",
        "release-debug": "git checkout debug && git merge master && git push origin debug && git checkout master"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "turbo": "^2.5.6",
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=22"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
