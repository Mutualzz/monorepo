{
    "name": "mutualzz",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "typecheck": "turbo run typecheck",
        "prestart": "pnpm install && pnpm build:packages && pnpm build:server",
        "build:server": "turbo run build --filter=\"./apps/server\"",
        "build:packages": "turbo run build --filter=\"./packages/logger\" --filter=\"./packages/validators\" --filter=\"./packages/types\"",
        "start": "pm2 start ./pm2.config.cjs"
    },
    "devDependencies": {
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "turbo": "^2.5.5",
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=22"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "pnpm@10.14.0"
}
