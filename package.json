{
    "name": "mutualzz",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "typecheck": "turbo run typecheck --filter=@mutualzz/rest --filter=@mutualzz/gateway --filter=@mutualzz/logger --filter=@mutualzz/ui --filter=@mutualzz/app",
        "prestart": "pnpm install && turbo run build --filter=@mutualzz/rest --filter=@mutualzz/gateway --filter=@mutualzz/logger",
        "start": "pm2 start ./pm2.config.cjs --env production",
        "start:rest": "node ./apps/rest/dist/index.js",
        "start:gateway": "node ./apps/gateway/dist/index.js"
    },
    "devDependencies": {
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "turbo": "^2.5.5",
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=22"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "packageManager": "pnpm@10.14.0"
}
